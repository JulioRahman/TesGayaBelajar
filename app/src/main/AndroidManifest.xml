<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.julio.tesgayabelajar">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".NavigationDrawerActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".splashscreen.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".tes.TesSendiriActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:label="Tes"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".tes.TesAnakActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:label="Tes"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".tes.HasilActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".gayabelajar.VisualScrollingActivity"
            android:label="@string/title_activity_visual_scrolling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".gayabelajar.AudiotoriScrollingActivity"
            android:label="@string/title_activity_audiotori_scrolling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".gayabelajar.KinestetikScrollingActivity"
            android:label="@string/title_activity_kinestetik_scrolling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".tentang.TentangActivity"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>